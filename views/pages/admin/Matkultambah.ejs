        <th scope="col" style="text-align: center;width:5%">SEMESTER</th>
      </tr>
      </thead>
      <tbody>
        <% var i = 0; %>
        <% matkuls.forEach((matkul) => { %>
        <% var num = matkul.sks %>

        <tr <% if (i % 2 == 1){ %> style="border-bottom:1px solid black;">
          <% } else { %>
          style="background-color:CCCCCC;border-bottom:1px solid black;">
          <% } %>
          <th scope="row"><%= i=i+1 %></th>
          <td><%= matkul.kode %></td>
          <td><%= matkul.prodi %></td>
          <td><%= matkul.matakuliah %></td>
          <td>
