<head>
    <style>
    .form-datamhsw {
      border: 1px solid black;
      max-height: 100%;
      width: 100%;
      margin-left: 10px;
      margin-top: 7px;
      border-color: black;
      border-top-left-radius: 10px;
      border-top-right-radius: 10px;
      float: left;
    }

    .form-datamhsw th,
    td,
    tr {
      padding: 10px;
    }

    tr,
    td {
      font-weight: 600;
    }
    </style>
</head>

<ul class="nav nav-tabs" style="font-size: 12pt;">
    <li class="nav-items">
        <a class="nav-link" href="/admin/DataMatkul"
            style="font-weight: 800; letter-spacing: 3pt; font-size: 8pt; color: black;">MATA KULIAH</a>

    </li>
    <li class="nav-items">
        <a class="nav-link" href="/admin/DataDosen"
            style="font-weight: 800; letter-spacing: 3pt; font-size: 8pt; color: black;">DATA DOSEN</a>
    </li>
    <li class="nav-items">
        <a class="nav-link active" href="/admin/DataMahasiswa"
            style="font-weight: 800; letter-spacing: 3pt; font-size: 8pt;color:black;">DATA MAHASISWA</a>
        <div class="nav-bawah"></div>
    </li>
    <li class="nav-items">
        <a class="nav-link" href="/admin/DataKHS"
            style="font-weight: 800; letter-spacing: 3pt; font-size: 8pt;color:black;">DATA KHS</a>
    </li>
    <li class="nav-items">
        <a class="nav-link" href="/admin/DataKRS"
            style="font-weight: 800; letter-spacing: 3pt; font-size: 8pt;color:black;">DATA KRS</a>
    </li>
</ul>
<div style="font-weight: 900; margin-left: 10px;font-size: 20pt; margin-top: 10px; width:50%;"> Data Mahasiswa
    <div>
        <a href="/admin/datamahasiswatambah" class="btn" style="background-color: #A01627; color: white; width: 150px;height: 50px; 
            border-radius: 100px; margin-top: 10px; font-weight: bold; font-size: 18pt;padding-left:3px;">+Tambah</a>
    </div>
</div>
<div>
    <div style="text-align: left;color: #000000; font-weight: bold;margin-left:5px;margin-top: 10px;font-weight: 700;">
        Show
        <select class="form-select form-select-lg mb-3" style="width:5%; border-color:black;">
            <option selected>10</option>
            <option value="5">5</option>
            <option value="10">10</option>
            <option value="15">15</option>
            <option value="20">20</option>
        </select>
        entries
    </div>
</div>
<div class="form-datamhsw" style="margin-left: 5px; margin-top: 10px;">
    <div style="width:100.1% ; height:15px;background-color:black; border-top-left-radius: 10px;
          border-top-right-radius: 10px;"></div>
    <div>
        <form>
        <table class="datamhsw" style="text-align:center;margin: 20px;padding: auto;">
            <tr style="border-bottom:1px solid black;letter-spacing: 2pt;">
                <th scope="col" style="text-align: center;width:3%">NO</th>
                <th scope="col" style="text-align: center;width:3%">NIM</th>
                <th scope="col" style="text-align: center;width:15%">NAMA MAHASISWA</th>
                <th scope="col" style="text-align: center;width:8%">PRODI</th>
                <th scope="col" style="text-align: center;width:9%">ACTION</th>
            </tr>
            </thead>
            <tbody>
                <% var i = 0; %>
                <% mahasiswas.forEach((mahasiswa) => { %>
                <tr <% if (i % 2 == 1){ %>
                  style="border-bottom:1px solid black;">
                <% } else { %>
                  style="background-color:CCCCCC;border-bottom:1px solid black;">
                <% } %>   
                  <th scope="row"><%= i=i+1 %></th>
                  <td><%= mahasiswa.nim %></td>
                  <td><%= mahasiswa.nama %></td>
                  <td><%= mahasiswa.prodi %></td>
                  <td>
                    <a href="/admin/datamahasiswaedit" type="button" class="btn btn-success"
                      style="border-radius: 20pt; width: 50pt;">Edit</a>
                    &nbsp
                    <a href="/admin/deleteMahasiswa/<%= mahasiswa.nim %>" class="btn btn-danger"
                      style="border-radius: 20pt; width: 50pt; margin-top: 3pt;">Hapus </a>
                  </td>
      
                </tr>
                <% }) %>


            </tbody>
        </table>
        <h6 style="text-align: left;color: #000000; font-weight: bold;padding-left:10px;">Showing 1 to 4 of 4
            entries</h6>
        <nav aria-label="Page navigation">
            <div style="padding-right: 1%;">
                <ul class="pagination justify-content-end">
                    <li class="page-item disabled">
                        <a class="page-link" style="color: black;font-weight: 700;" href="#" tabindex="-1"
                            aria-disabled="true">Previous</a>
                    </li>
                    <li class="page-item"><a class="page-link" style="background-color:A01627;color: white;"
                            href="#">1</a></li>
                    <li class="page-item">
                        <a class="page-link" style="color: black;font-weight: 700;" href="#">Next</a>
                    </li>
                </ul>
        </nav>

        </form>
        &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp
    </div>
</div>


<%- contentFor('title') %>
Data Mahasiswa
